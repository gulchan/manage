<?xml version="1.0" encoding="UTF-8" ?>
<!--<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">-->
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!--指定日志输出格式-->
            <PatternLayout pattern="%highlight{%-5level}[%d{yyyy-MM-dd HH:mm:ss:SSS}]  - %l - %m%n"></PatternLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
<!--            控制台输出-->
            <AppenderRef ref="Console"></AppenderRef>
        </Root>

    </Loggers>
</Configuration>